<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/rv_item_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_item_prj_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rv_left_margin"
            android:layout_gravity="left"
            android:textSize="@dimen/header_text_size"
            tools:text="Project name"/>
        <TextView
            android:id="@+id/tv_item_prj_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rv_left_margin"
            android:textSize="@dimen/header_text_size"
            android:text="project id"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight= "1"
        android:textSize="@dimen/text_size"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/rv_right_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rv_left_margin"
            android:layout_gravity="left"
            android:textSize="@dimen/header_text_size"/>
        <TextView
            android:id="@+id/tv_item_researcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/rv_right_margin"
            android:layout_gravity="left"
            android:textSize="@dimen/header_text_size"
            tools:text="Researcher"/>
    </LinearLayout>



</LinearLayout>